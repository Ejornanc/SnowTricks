{% extends "layouts/base.html.twig" %}

{% block title %}Mon profil{% endblock %}

{% block head %}
    {{ parent() }}
        <link rel="stylesheet" href="{{ asset('Css/Computer/Profile.css') }}">
{% endblock %}

{% block content %}
    <h1>Mon profil</h1>

    <div class="profile-block">
        <div class="profile-picture">
            <img src="{% if user.image %}{{ asset('uploads/users/' ~ user.image) }}{% else %}{{ asset('Images/Default_User_Image.png') }}{% endif %}" alt="Photo de profil" width="100" height="100" style="border-radius: 50%; object-fit: cover;">
        </div>

        <div class="user-form">
            {{ form_start(form, { 'attr': { 'enctype': 'multipart/form-data' } }) }}
            <h3>Username</h3>
            {{ form_row(form.username) }}
            <h3>Mail</h3>
            {{ form_row(form.email) }}
            <h3>Photo de profil (JPG, PNG ou WEBP)</h3>
            {{ form_row(form.imageFile) }}
            <button class="btn btn-primary">Mettre Ã  jour</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
