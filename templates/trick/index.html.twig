{% extends "layouts/base.html.twig" %}

{% block title %}Liste des tricks{% endblock %}
{% block head %}
    <style>
        /* Styles CSS pour la liste des articles */
    </style>
{% endblock %}

{% block content %}
  <section class="trick-index">
      {% for trick in tricks %}
      <article>
          <h2>{{ trick.name }}</h2>
          <div class="metadata"> Ecrit le {{ trick.createdAt | date ('d/m/Y') }} a {{ trick.createdAt| date ('H:i') }}</div>
          <div class="content">
              {{ trick.description }}
              <a href="{{ path('trick_show', { slug: trick.slug }) }}">
                  Voir {{ trick.name }}
              </a>
          </div>
      </article>
      {% endfor %}
{% endblock %}
